<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    async function changePassword() {
        const form = document.getElementById('changePasswordForm');
        const oldPass = form.oldPassword.value.trim();
        const newPass = form.newPassword.value.trim();
        const passwordPattern = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/;

        // Check if fields are empty
        if (!oldPass || !newPass) {
            Swal.fire({
                icon: 'error',
                title: 'Fields should not be empty',
                text: 'Please fill in all fields.',
                confirmButtonText: 'OK'
            });
            return;
        }

        if(!passwordPattern.test(newPass)){
            Swal.fire({
                icon:'error',
                title:'Use Strong Password',
                text:'Password must be at least 8 characters long, contain at least one uppercase letter, one lowercase letter, one number, and one special character.',
                confirmButtonText: 'OK'
            })
            return;
        }
        
    
        // Send the request to the server
        try {
            const response = await fetch('/user/changePassword', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ oldPass, newPass })
            });
    
            const result = await response.json(); // Always parse the response as JSON
    
            // Check the response status
            if (response.ok) {
                // Show success SweetAlert
                Swal.fire({
                    icon: 'success',
                    title: 'Password Updated',
                    text: result.message, // Use the success message from the server
                    confirmButtonText: 'OK'
                }).then(() => {
                    location.reload(); // Reload the page after closing the alert
                });
            } else {
                // Show specific SweetAlert based on error message
                if (result.message === 'Incorrect current password') {
                    Swal.fire({
                        icon: 'error',
                        title: 'Incorrect Password',
                        text: 'The current password you entered is incorrect.',
                        confirmButtonText: 'OK'
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Failed to Update',
                        text: 'Unable to update password. Please try again later.',
                        confirmButtonText: 'OK'
                    });
                }
            }
        } catch (error) {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'An unexpected error occurred. Please try again later.',
                confirmButtonText: 'OK'
            });
        }
    }
    </script>
    

