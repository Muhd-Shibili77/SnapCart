<%- include ("../partial/header" )-%>


<div class="login_align">


<div class="login-container">
   
    <div class="login-form mt-5">
        <h2 class="text-center">Enter your Email</h2>
        
        <form class="mt-3" action="/user/forgetPassword" method="post">
            <div class="input-group">
                <input type="text" id="email" name="email" class="form-email" placeholder="Email"  required>
            </div>
            <p class="text-danger" style="margin-left: 19vh; font-size: medium;"> <%= locals.emailExist ? emailExist : null  %></p>
           
            <div class="submit d-flex jusfity-content-end">
               
                    <button type="submit" value="submit" class="btn btn-dark px-4 py-2 mt-2" style="font-size: 0.9rem; margin-left: 94vh;">Submit</button>  
            </div>
           
           
        </form>
    </div>
</div>
</div>








