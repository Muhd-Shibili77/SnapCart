<!-- ***** Product Area Starts ***** -->
<section class="section" id="product">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="left-images">
                            <img src="/<%= product.variants[0].images[0] %>" 
                            data-action="zoom" 
                            alt="Product Image 1" 
                            class="zoom-img">
                             <img src="/<%= product.variants[0].images[1] %>" alt="">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="left-images">
                            <img src="/<%= product.variants[0].images[2] %>" alt="">
                            <img src="/<%= product.variants[0].images[3] %>" alt="">
                            
                        </div>
                    </div>
                    
                </div>
            
        </div>
        <div class="col-lg-4">
            <div class="right-content">
                <h3><%= product.product_name %></h3>
            <div class="mb-3">
                <span class="badge bg-warning text-dark">4.5 ★</span>
                <span>(150 Reviews)</span>
            </div>
            <h4 class="text-primary">INR <%= product.variants[0].price %></h4>
            <p><%= product.product_highlights %></p>

            <div class="mb-3">
                <label for="colors" class="form-label">Colours:</label>
                <select id="colors" class="form-select">
                    <option selected><%= product.variants[0].color %></option>
                    <option>Black</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="size" class="form-label">Size:</label>
                <select id="size" class="form-select">
                    <option>XS</option>
                    <option>S</option>
                    <option>M</option>
                    <option selected>L</option>
                    <option>XL</option>
                </select>
            </div>
            <h5 class="<%= product.variants[0].stock > 0 ? 'text-success' : 'text-danger' %>">
                <%= product.variants[0].stock > 0 ? `${product.variants[0].stock} In Stock` : 'Out of Stock' %></h5>
            <div class="mb-3 mt-3 ">
                <label for="quantity" class="form-label">Quantity:</label>
                <input type="number" id="quantity" class="form-control" value="2" min="1">
            </div>

            <div class="mb-3">
               <% if(product.variants[0].stock >0 ){ %>
                    <button class="btn btn-primary w-100">Buy Now</button>
               <% }else{ %>
                    <button class="btn btn-danger w-100">Notify me</button>
               <% } %>
            </div>

            <div class="d-flex justify-content-between">
                <div>
                    <span class="d-block"><strong>Free Delivery</strong></span>
                    <small>Enter your postal code for delivery availability</small>
                </div>
                <div>
                    <span class="d-block"><strong>Return Delivery</strong></span>
                    <small>Free 30 Days Delivery Returns. Details</small>
                </div>
            </div>
            
            <form action="" class="mt-5">
                <div class="input-group">
                    <input type="text" id="email" name="email" class="borderless" placeholder="Enter Coupon">
                    <button type="submit" value="submit" class="btn btn-dark px-4 mt-4" style="font-size: 0.9rem; margin-left: 250px;">Submit</button>
                </div>
            </form>
        </div>
        </div>
    </div>
</section>
<!-- ***** Product Area Ends ***** -->


 <!-- Related Items -->
        <div class="section-heading">
            <h2 class="text-center">Related Products</h2>
        </div>
        <div class="container d-flex">
        <div class="row mt-5 d-flex">
            <% relatableProduct.forEach((element)=>{ %>
                <% if(element.product_name != product.product_name){ %>
                    <div class="col-md-3 mt-4">
                        <div class="card" style="height: 70vh;">
                            <a href="/user/product?id=<%= element._id %>"><img src="/<%= element.variants[0].images[0] %>" class="card-img-top" style="height: 50vh; object-fit: cover;" alt="Related Item 1"></a>
                            <div class="card-body text-center">
                                <h5 class="card-title"><%= element.product_name %></h5>
                                <p class="card-text text-danger"><small><del><%= element.variants[0].price+120 %></del></small> <%= element.variants[0].price %></p>
                                <span class="badge bg-warning text-dark">4.5 ★ (88)</span>
                            </div>
                        </div>
                    </div>
               <% } %>
           <% }) %>
</div>
