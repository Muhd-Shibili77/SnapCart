    <div class="order-details">
        <!-- ------------------breadcrumbs starts----------------- -->
        <div class="container">
            <ol class="breadcrumb breadcrumb-arrow">
                <li><a href="/user/home">Home</a></li>
                <li><a href="/order/order_history">My orders</a></li>
