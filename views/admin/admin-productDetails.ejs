<%- include ('../partial/admin-header')-%>
<style>
    body{
        overflow-x: hidden;
    }
    .side-area{
        height: 100%;
        background-color: transparent;
    }
    .main-area{
        height: 100vh;
        margin-top: 20vh;
        background-color: transparent;
    }
    .admin-dashboard .dashboard{
        color: #505050 !important;
    }
    .side1{
      width: 300px !important;
      height: 700px !important;
      background-color: rgba(170, 170, 170, 0.52);
      border-radius: 12px;
      margin-top: 0vh;
      position: fixed;
      margin-left: 40px;
    }
    .admin-name{
        margin-left: 135vh;
    }
    .search{
        width: 130vh;
        margin-left: 15vh;
        border-radius: 10px;
    }
    .products-1{
        color: #000000 !important;
    }
    .dashboard{
        color: #505050 !important;
    }
    .dashboard:hover{
        color: #000000 !important;
    }
</style>
<section>
    <div class="row">
        <div class="col-md-3">
            <div class="container side-area">
                <div class="container-fluid side1">
                    <div class="side-bar">
                      <div  class="container-7">
                          <div>
                              <img style="margin: 50px;" src="/images/SnapCart.png" alt="">
                          </div>
                        <div class="dashboard-1">
                          <div class="dashboard-11"></div>
                          <a href="/admin/dashboard" class="dashboard btn"><img style="width: 30px; margin-right: 15px;" src="/images/icons/dashboard.png" alt="">Dashboard </a>
                        </div>
                        
                        <div class="users">
                          <div class="user"></div>
                          <a href="/admin/users" class="users-1 btn"><img style="width: 30px; margin-right: 15px;" src="/images/icons/user.png" alt=""> Users </a>
                        </div>
                        <div class="products">
                          <div class="order"></div>
                          <a href="#" class="products-1 btn "><img style="width: 30px; margin-right: 15px;" src="/images/icons/order (1).png" alt=""> Products </a>
                        </div>
                        <div class="offers">
                            <div class="order"></div>
                            <a href="#" class="offers-1 btn "><img style="width: 30px; margin-right: 15px;" src="/images/icons/discount.png" alt=""> Offers </a>
                          </div>
                        <div class="orders">
                          <div class="shopping-cart"></div>
                          <a href="/admin/orders" class="orders-1 btn"><img style="width: 30px; margin-right: 15px;" src="/images/icons/shopping-cart.png" alt="">Orders </a>
                        </div>
                        <div class="categories">
                          <div class="categories-2"></div>
                          <a href="/admin/category" class="categories-1 btn"><img style="width: 30px; margin-right: 15px;" src="/images/icons/categories.png" alt=""> Categories </a>
                        </div>
                        <div class="brands">
                          <div class="brand-1"></div>
                          <a href="/admin/brand" class="brands-1 btn"><img style="width: 30px; margin-right: 15px;" src="/images/icons/brand.png" alt=""> Brands </a>
                        </div>
                        <div class="coupon">
                          <div class="coupon-1"></div>
                          <a  href="#" class="coupon-1 btn"><img style="width: 30px; margin-right: 15px;" src="/images/icons/coupon (1).png" alt="">Coupon</a>
                        </div>
                        <div class="payment">
                          <div class="income-1"></div>
                          <a  href="#" class="payment-1 btn"><img style="width: 30px; margin-right: 15px;" src="/images/icons/income (1).png" alt=""> Payment </a>
                        </div>
                        <div class="payment-2">
                          <div class="logout-1"></div>
                          <a  href="/admin/logout" class="logout btn"><img style="width: 30px; margin-right: 15px;" src="/images/icons/logout.png" alt=""> Logout </a>
                        </div>
                      </div>
                      <div class="icon">
                        <div class="snap-cart-3"></div>
                        <div class="line-21"></div>
                      </div>
                    </div>
                  </div>

            </div>
        </div>
        <div class="col-md-9">
            <div class="container-fluid main-area">
                <div>
                    <h2><%= product.product_name %></h2>
                   
                    <p style="color: grey;" class="mt-4">  <span style="color: black; font-weight: 600;" >Highlights: </span><%= product.product_highlights %></p>
                    <p style="color:grey " class="mt-4"><span style="color:black; font-weight:600">Category: </span> <%= product.category_id.category_name %></p>
                    <p style="color:grey " class="mt-4"><span style="color:black; font-weight:600">Brand: </span> <%= product.brand_id.brand_name %></p>
                    <p style="color:grey " class="mt-4"><span style="color:black; font-weight:600">Description: </span> <%= product.product_description %></p>
                  </div>
                  <table class="table table-bordered table-hover mt-5">
                <thead>
                    <tr>
                      <th scope="col">Sl</th>
                      <th scope="col">Color</th>
                      <th scope="col">Size</th>
                      <th scope="col">Price</th>
                      <th scope="col">Stock</th>
                      <th scope="col">Image</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% product.variants.forEach((element,index) => { %>
                      <tr>
                         <th scope="row"><%= index+1 %></th>
                         <th><%= element.color %></th>
                         <th><%= element.size %></th>
                         <th><%= element.price %></th>
                         <th class="<%= element.stock > 0 ? 'text-success':'text-danger' %>">
                          <%= element.stock > 0 ? `${element.stock} In Stock ` : `Out of Stock ` %>
                        </th>
                         <th>
                          <img style="width: 50px; height: 50px; object-fit: cover;" src="/<%= element.images[0] %>" alt="">
                          <img style="width: 50px; height: 50px; object-fit: cover;" src="/<%= element.images[1] %>" alt="">
                          <img style="width: 50px; height: 50px; object-fit: cover;" src="/<%= element.images[2] %>" alt="">
                          <img style="width: 50px; height: 50px; object-fit: cover;" src="/<%= element.images[3] %>" alt="">
                        </th>
                      </tr>

                    <% }) %>
                   
                    
                  </tbody>
              </table>
              <div>
                <a  href="/admin/products" type="button" class="btn btn-outline-danger"><i class="bi bi-backspace"></i>
                  Back </a>
              </div>
        </div>
        </div>



    
    
    
    
    </div> 
</section>
<%- include ('../partial/admin-footer')-%>