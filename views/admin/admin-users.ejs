                    <% if(typeof users !='undefined' && users.length > 0 ) { %>
                      <% users.forEach((user,index) => { %>
                    <tr>
                      <th scope="row"><%= index+1 %></th>
                      <td><%= user.name %></td>
                      <td><%= user.email %></td>
                      <td><%= user.phone %></td>
                      <td><% if (user.isBlock) { %>
                        <button type="button" class="btn btn-success unblock-button" data-user-id="<%= user._id %>">UNBLOCK</button>
                      <% } else { %>
                        <button type="button" class="btn btn-danger block-button" data-user-id="<%= user._id %>">BLOCK</button>
                      <% } %>
                    </td>
                      
                    </tr>
                    <% }) %>
                    <% } else { %>
                      <tr>
                        <td  colspan="6" class="text-center">No user available</td>
                      </tr>
                    <% } %>
                  </tbody>
              </table>
        </div>
        </div>
    </div> 
</section>
<script>


  document.addEventListener("DOMContentLoaded",()=>{
    const blockbuttons = document.querySelectorAll(".block-button")
    const unblockbuttons = document.querySelectorAll(".unblock-button")

//blocking user

    blockbuttons.forEach(button =>{
      button.addEventListener('click',async ()=>{
        const userId = button.getAttribute("data-user-id")
        try{
          const responce = await fetch('/admin/block',{
            method:'POST',
            headers:{
              'Content-Type':'application/json',
            },
            body:JSON.stringify({userId})
          });

          if(responce.ok){
            location.reload(); // Reload the page
          }else{
            alert('Failed to block user');
          }
        }catch(err){
          console.error('Error while blocking user:', error);
        }
      })
    })

    //unblocking user

    unblockbuttons.forEach(button => {
        button.addEventListener('click', async () => {
            const userId = button.getAttribute('data-user-id');
            try {
              console.log(userId)
                const response = await fetch('/admin/unblock', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ userId })
                });

                if (response.ok) {
                    location.reload(); // Reload the page
                } else {
                    alert('Failed to unblock user');
                }
            } catch (error) {
                console.error('Error unblocking user:', error);
            }
        });
    });
})
</script>








