<%- include ("../partial/header" )-%>


<div class="login_align">


<div class="login-container">
    <div class="login-image">
        <img class="img-fluid" src="/images/about-us-page-heading.jpg" alt="Shopping Mall Image">
    </div>
    <div class="login-form mt-5">
        <h2>Log in to SnapCart</h2>
        <p>Enter your details below</p>
        <form class="mt-3" action="/login" method="post">
            <div class="input-group">
                <input type="text" id="email" name="email" class="borderless" placeholder="Email or Phone Number"  required>
            </div>
            <div class="input-group">
                <input type="password" id="password" name="password" class="borderless mt-2" placeholder="Password" required >
            </div>
            <div class="row pt-3 mt-5">
                <div class="col-sm-6">
                    <button type="submit" value="submit" class="btn btn-dark px-4 py-2 mt-2" style="font-size: 0.9rem;">Login</button>
                </div>
                <div class="col-sm-6 mt-1 text-end">
                    <a href="#" class="f-p text-dark text-decoration-none" style="font-size: 0.9rem;">Forget Password?</a>
                </div>
            </div>
            <p class="mb-0 text-center" style="font-size: 0.85rem;">Don't have an account ? <a href="/user/signup" class="fw-bold text-dark text-decoration-none">Signup</a></p>
        </form>
    </div>
</div>
</div>









