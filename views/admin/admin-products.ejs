                        </div>
                        <div class="payment-2">
                          <div class="logout-1"></div>
                          <a  href="/admin/logout" class="logout btn"><img style="width: 35px; margin-right: 15px;" src="/images/icons/logout.png" alt=""> Logout </a>
                        </div>
                      </div>
                      <div class="icon">
                        <div class="snap-cart-3"></div>
                        <div class="line-21"></div>
                      </div>
                    </div>
                  </div>

            </div>
        </div>
        <div class="col-md-9">
            <div class="container-fluid main-area">
                <div class="group-1000005981 admin-name">
                    <div class="shibili">
                     <img style="width: 30px; margin-right: 15px; margin-bottom: 15px;" src="/images/icons/user (2).png" alt="">Shibili
                    </div>
                  </div>
                  <div class="">
                    <form class="  " style="width:350px;">
                    <input class="form-control search" type="search"    placeholder= "Search..." aria-label="Search">
                    </form>
                </div> 
                  <table class="table table-striped table-hover mt-5">
                <thead>
                    <tr>
                      <th scope="col">Sl</th>
                      <th scope="col">image</th>
                      <th scope="col">product_Name</th>
                      <th scope="col">Category</th>
                      <th scope="col">Brand</th>
                      <th scope="col">Stock</th>
                      <th scope="col">Price</th>
                      <th scope="col">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if(typeof product !='undefined' && product.length > 0 ) { %>
                      <% product.forEach((products,index) => { %>
                      <tr>
                        <th scope="row"><%= index+1 %></th>
                        <td><img src="/<%= products.variants[0].images[0] %>" style="width: 45px; height: 45px;" class="img-fluid" alt="icon"></td>
                        <td><%= products.product_name %></td>
                        <td><%= products.category_id.category_name %></td>
                        <td><%= products.brand_id.brand_name %></td>
                        <td class="<%= products.variants[0].stock > 0 ? 'text-success' : 'text-danger' %>">
                          <%= products.variants[0].stock > 0 ? `${products.variants[0].stock} In Stock` : 'Out of Stock' %>
                        </td>
                        <td><%= products.variants[0].price %></td>
                        <td><% if (products.isDelete) { %>
                          <button type="button" class="btn btn-success restore-button" data-product-id="<%= products._id %>">RESTORE</button>
                        <% } else { %>
                          <button type="button" class="btn btn-danger delete-button" data-product-id="<%= products._id %>"><i class="bi bi-trash"></i></button>
                          <a type="button" class="btn btn-outline-dark " href="/admin/edit_product?id=<%= products._id %>"><i class="bi bi-pencil-square"></i></a>
                          <a type="button" class="btn btn-outline-success " href="/admin/product_detail?id=<%= products._id %>"><i class="bi bi-eye"></i></a>
                        <% } %>
                      </td>
                        
                      </tr>
                      <% }) %>
                  
                      

                      <% } else { %>
                        <tr>
                          <td  colspan="9" class="text-center">No product available</td>
                        </tr>
                      <% } %>
                    
                  </tbody>
              </table>
              <div>
                <a  href="/admin/add_products" type="button" class="btn btn-outline-dark"><i class="bi bi-plus-square"></i> Add Product</a>
              </div>
        </div>
        </div>



    
    
    
    
    </div> 
</section>

<script>
  document.addEventListener("DOMContentLoaded",()=>{
    const deletebuttons = document.querySelectorAll(".delete-button")
    const restorebuttons = document.querySelectorAll(".restore-button")
    


//deleting category

    deletebuttons.forEach(button =>{
      button.addEventListener('click',async ()=>{
        const proId = button.getAttribute("data-product-id")
        console.log(proId)
        try{
          console.log('3')
          const responce = await fetch('/admin/delete_products',{
            method:'POST',
            headers:{
              'Content-Type':'application/json',
            },
            body:JSON.stringify({proId})
          });

          if(responce.ok){
            location.reload(); // Reload the page
          }else{
            alert('Failed to delete product');
          }
        }catch(err){
          console.error('Error while deleting product:', error);
        }
      })
    })

    //restoring category

    restorebuttons.forEach(button => {
        button.addEventListener('click', async () => {
          const proId = button.getAttribute("data-product-id")
            try {
                const response = await fetch('/admin/restore_product', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ proId })
                });

                if (response.ok) {
                    location.reload(); // Reload the page
                } else {
                    const data = await response.json();
                    alert(data.message);
                }
            } catch (error) {
                console.error('Error while restoring category:', error);
                alert('An error occurred while trying to restore the product.');
            }
        });
    });
})
</script>








