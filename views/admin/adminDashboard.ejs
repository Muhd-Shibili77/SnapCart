    .loader {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 64px;
      height: 64px;
      display: inline-block;
    }

    .loader::after {
      content: '';
      display: block;
      width: 64px;
      height: 64px;
      margin: 8px;
      border-radius: 50%;
      border: 6px solid #005b18;
      animation: ripple 1.2s infinite ease-in-out;
    }

    @keyframes ripple {
      0% {
        transform: scale(0.1);
        opacity: 1;
      }

      70% {
        transform: scale(1);
        opacity: 0.3;
      }

      100% {
        transform: scale(1.5);
