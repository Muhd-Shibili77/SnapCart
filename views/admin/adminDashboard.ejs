            <label for="reportStartDate">Start Date:</label>
            <input type="date" id="reportStartDate" class="form-control">
            <label for="reportEndDate" class="mt-2">End Date:</label>
            <input type="date" id="reportEndDate" class="form-control">
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="button" id="downloadReportBtn" class="btn btn-primary">Download</button>
          </div>
        </div>
      </div>
    </div>

    
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const chatSortSelect = document.getElementById("chatSortSelect");
        const sortSelect = document.getElementById("sortSelect");
        const applyDateRangeButton = document.getElementById("applyDateRange");
        const customDateInputs = document.getElementById("customDateInputs");


        function updateURL(paramKey, paramValue) {
          const urlParams = new URLSearchParams(window.location.search);

          urlParams.set(paramKey, paramValue);

          const newUrl = `${window.location.origin}${window.location.pathname}?${urlParams.toString()}`;
          window.location.href = newUrl;
        }


        chatSortSelect.addEventListener('change', () => {
          const chartSortValue = chatSortSelect.value;
          if (chartSortValue) {
            updateURL('chartSort', chartSortValue);
          }
        });


        sortSelect.addEventListener('change', () => {
          const sortValue = sortSelect.value;

          if (sortValue === "custom") {
            customDateInputs.classList.remove("d-none");
          } else {
            customDateInputs.classList.add("d-none");
            if (sortValue) {
              updateURL('sortStats', sortValue);
            }
          }
        });


        applyDateRangeButton.addEventListener('click', () => {
          const startDate = document.getElementById("startDate").value;
          const endDate = document.getElementById("endDate").value;

          if (startDate && endDate) {
            updateURL('sortStats', `custom&startDate=${startDate}&endDate=${endDate}`);
          } else {
            alert("Please select both start and end dates.");
          }
        });
      });


      document.getElementById("downloadReportBtn").addEventListener("click", async function () {
        document.getElementById('loader').style.display = 'block';

        const startDate = document.getElementById("reportStartDate").value;
        const endDate = document.getElementById("reportEndDate").value;

        if (!startDate) {
          Swal.fire({
            icon: "error",
            title: "startDate is empty",
            text: "Select a start date first",
          });
          return;
        }
        if (!endDate) {
          Swal.fire({
            icon: "error",
            title: "endDate is empty",
            text: "Select a end date first",
          });
          return;
        }

        if (new Date(startDate) > new Date(endDate)) {
          Swal.fire({
            icon: "error",
            title: "Invalid Date",
            text: "Start date must be before the end date.",
          });
          return;
        }


        try {
          const response = await fetch("/admin/downloadReport", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ startDate, endDate }),
          });

          if (response.ok) {
            const blob = await response.blob();
            const downloadUrl = window.URL.createObjectURL(blob);
            const downloadLink = document.createElement("a");
            downloadLink.href = downloadUrl;
            downloadLink.download = `salesReport_${startDate}-${endDate}.pdf`;
            document.body.appendChild(downloadLink);
            downloadLink.click();
            document.body.removeChild(downloadLink);


            window.URL.revokeObjectURL(downloadUrl);

            // Close the modal after successful download
            const modalElement = document.getElementById("dateSelectionModal");
            const modal = bootstrap.Modal.getInstance(modalElement);
            if (modal) {
              modal.hide();
            } else {
              $(modalElement).modal("hide");
            }
          } else {
            const Data = await response.json();
            if (Data.error === "No orders found for the selected date range.") {
              Swal.fire({
                icon: "info",
                title: "No Orders Found",
                text: "There are no orders in the specified date range.",
                confirmButtonText: "OK",
              });
              return;
            }
            throw new Error("Failed to download the report.");
          }
        } catch (error) {
          console.error("Error downloading the report:", error);
          Swal.fire({
            icon: "error",
            title: "Download Failed",
            text: "An error occurred while downloading the report. Please try again later.",
          });
        } finally {

          document.getElementById('loader').style.display = 'none';
        }
      })




      const today = new Date().toISOString().split('T')[0];


      const startDateInput = document.getElementById("startDate");
      startDateInput.setAttribute("max", today);


      startDateInput.addEventListener("change", function () {
        const selectedStartDate = this.value;
        const endDateInput = document.getElementById("endDate");


        if (selectedStartDate) {
          endDateInput.setAttribute("min", selectedStartDate);
        } else {

          endDateInput.removeAttribute("min");
        }
      });



      const reportStartDateInput = document.getElementById("reportStartDate");
      reportStartDateInput.setAttribute("max", today);


      reportStartDateInput.addEventListener("change", function () {
        const selectedStartDate = this.value;
        const reportEndDateInput = document.getElementById("reportEndDate");

        if (selectedStartDate) {
          reportEndDateInput.setAttribute("min", selectedStartDate);
        } else {

          reportEndDateInput.removeAttribute("min");
        }
      });

    </script>

